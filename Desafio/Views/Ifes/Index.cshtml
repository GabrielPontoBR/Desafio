@model IEnumerable<Desafio.Models.Ifes>

@{
    ViewBag.Title = "Index";
}

<head>
    <link href="~/Style/bootstrap.css" rel="stylesheet" />
</head>

<h2>Formulário</h2>

<p>
    @Html.ActionLink("Cadastrar |", "Create")

    @Html.ActionLink("Pesquisar", "Search")
   
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.cnpj }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.cnpj }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.cnpj })

               
            </td>
        </tr>
    }

</table>
